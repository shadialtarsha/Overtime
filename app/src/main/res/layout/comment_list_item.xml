<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/comment_list_item_padding">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/comment_list_item_user_profile_photo"
        android:layout_width="@dimen/comment_user_profile_photo_width"
        android:layout_height="@dimen/comment_user_profile_photo_height"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/user_profile_photo_image_view_radius"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comment_list_item_content_left_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comment_list_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/comment_list_item_username_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/comment_list_item_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/comment_list_item_content_text_size"/>

        <TextView
            android:id="@+id/comment_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_list_item_date_top_margin"
            android:textSize="@dimen/comment_list_item_date_text_size"/>

    </LinearLayout>
</LinearLayout>