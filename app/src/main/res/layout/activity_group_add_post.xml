<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/group_add_post_linear_layout_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/group_add_post_cancel_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_close"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/group_add_post_user_profile_photo"
                android:layout_width="@dimen/group_add_post_user_profile_photo_width"
                android:layout_height="@dimen/add_post_user_profile_photo_height"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/user_profile_photo_image_view_radius"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/group_add_post_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/group_add_post_edit_text_top_margin"
            android:background="@android:color/transparent"
            android:hint="@string/group_add_post_edit_text_hint"
            android:inputType="textMultiLine"/>

        <FrameLayout
            android:id="@+id/group_add_post_image_frame_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/group_add_post_image_frame_layout_top_margin"
            android:visibility="gone">

            <ImageView
                android:id="@+id/group_add_post_image_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/group_add_post_cancel_post_icon_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/group_add_post_cancel_post_image_icon_margin"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_post_gallery_cancel"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_add_post_bottom_bar_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/whiteColor"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/group_add_post_bottom_bar_tools_linear_layout_top_margin"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/group_add_post_photo_picker_image_button"
                android:layout_width="@dimen/group_add_post_photo_picker_image_button_width"
                android:layout_height="@dimen/group_add_post_photo_picker_image_button_height"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/group_add_post_photo_picker_image_button_bottom_margin"
                android:layout_marginLeft="@dimen/group_add_post_photo_picker_image_button_left_margin"
                android:background="@drawable/ic_post_gallery"/>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/group_add_post_text_max_characters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/group_add_post_text_max_characters_bottom_margin"
                android:layout_marginRight="@dimen/group_add_post_text_max_characters_right_margin"
                android:textColor="@color/blackColor"/>

            <Button
                android:id="@+id/group_add_post_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/group_add_post_button_bottom_margin"
                android:layout_marginRight="@dimen/group_add_post_button_right_margin"
                android:enabled="false"
                android:text="@string/add_post_button"
                android:textColor="@color/blackColor"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>