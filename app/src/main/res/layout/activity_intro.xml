<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/intro_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/intro_dots_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/intro_dots_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/intro_dots_bottom_margin"
        android:gravity="center"
        android:orientation="horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/intro_view_height"
        android:layout_above="@id/intro_dots_layout"
        android:alpha="0.5"
        android:background="@color/blackColor"/>

    <Button
        android:id="@+id/intro_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:onClick="nextButtonOnClick"
        android:text="@string/intro_next_button"
        android:textColor="@color/blackColor"/>

    <Button
        android:id="@+id/intro_skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:onClick="skipButtonOnClick"
        android:text="@string/intro_skip_button"
        android:textColor="@color/blackColor"/>

</RelativeLayout>

