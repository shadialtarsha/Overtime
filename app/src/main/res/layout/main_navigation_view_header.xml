<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_height"
    android:background="@drawable/navigation_header_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/navigation_header_layout_left_padding"
    android:paddingTop="@dimen/navigation_header_layout_top_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/navigation_header_user_profile_image"
        android:layout_width="@dimen/navigation_header_user_profile_image_width"
        android:layout_height="@dimen/navigation_header_user_profile_image_height"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/user_profile_photo_image_view_radius"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navigation_header_text_linear_layout_left_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/navigation_header_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/navigation_header_username_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/navigation_header_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navigation_header_user_email_text_top_margin"
            android:maxLines="1"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/navigation_header_user_email_text_size"/>
    </LinearLayout>
</LinearLayout>
